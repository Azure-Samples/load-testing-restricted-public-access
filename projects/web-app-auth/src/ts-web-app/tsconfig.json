{
  "compilerOptions": {
    "module": "ES6",
    "rootDir": "src",
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "outDir": "./dist/",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
  },
  "include":[ 
    "src/**/*"
  ],
}
